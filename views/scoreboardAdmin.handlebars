<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title></title>
<link rel="stylesheet" href="../bootstrap.min.css"></link>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-beta1/jquery.min.js"></script>
<style>
  h2{
    text-align:center;
  }
  .my-wrapper{
    margin:0 auto;
    max-width:80%;
    position:relative;
    height:100%;
  }
  img{
    height:auto;
    max-width:500px;
    padding-bottom:40px;
    margin-left:auto;
    margin-right:auto;
    display:block;
  }
</style>
<script >
  console.log('script')
  $('#deleteButton').click(function(){
    //send event to server
    console.log('being clicked')
    alert('button clicked delete user');
  })
</script>
</head>
<body class="container">
  <div class=" my-wrapper">
    <img src="../assets/cissaLogo.png" alt="cissa">
    <table class="table">
      <tr>
        <th>Position</th>
        <th>Name</th>
        <th>Email</th>
        <th>StudentId</th>
        <th>Score</th>
        <th>Delete</th>
      </tr>
      {{#each documents}}
      <tr>
        <td> {{counter @index }}</td>
        <td>{{this.name}}</td>
        <td>{{this.email}}</td>
        <td>{{this.studentId}}</td>
        <td>{{this.score}}</td>    
        <td><button type="button" class="btn btn-danger btn-xs" 
            onclick="
            if(confirm('You are going to delete {{this.name}}') === true){
              //send event to db
              $.ajax({
              url: '/admin/student/{{this.studentId}}',
              type:'DELETE',
              success: function(result){
                location.reload();
              }

              })
              }else{
              //do nothing
              }">Delete</button></td>
      </tr>
      {{/each}}
    </table>  
  </div>
</body>
</html>
